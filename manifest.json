{
  "name": "Que issue?",
  "version": "1.3.1",
  "description": "Copia a descrição de uma issue do Jira ou Trello para o clipboard",
  "permissions": ["activeTab", "declarativeContent", "storage", "clipboardWrite"],
  "options_page": "options.html",
  "background": {
    "service_worker": "service_worker.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/otter16.png",
      "32": "images/otter32.png",
      "48": "images/otter48.png",
      "128": "images/otter128.png"
    }
  },
  "icons": {
    "16": "images/otter16.png",
    "32": "images/otter32.png",
    "48": "images/otter48.png",
    "128": "images/otter128.png"
  },
  "manifest_version": 3
}
